{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "jsx": "react",
        "esModuleInterop": true,
        "target": "es2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom",
            "dom.iterable"
        ],
        "declaration": false,
        "outDir": "dist",
        "strict": true,
        "strictNullChecks": true,
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/node_modules/*",
        "**/dist/*",
        "test"
    ]
}